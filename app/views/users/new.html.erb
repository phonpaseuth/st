<!-- Signup page -->

<div class="signup">
  <h1>Sign up</h1>
  <div class="container">
    <div class="form">
      <%= form_for(@user) do |f| %>
        <dl>
          <dt>First Name</dt>
          <dd><%= f.text_field :first_name, :placeholder => "John" %></dd>
          <dt>Last Name</dt>
          <dd><%= f.text_field :last_name, :placeholder => "Doe" %></dd>
          <dt>Phone Number</dt>
          <dd><%= f.text_field :phone_number, :placeholder => "xxx-xxx-xxxx" %></dd> 
          <dt>Email</dt>
          <dd><%= f.email_field :email, :placeholder => "youremail@address.com" %></dd> 
          <dt>Password</dt>
          <dd><%= f.password_field :password, :placeholder => "!ts53Cr3t" %></dd>
        </dl>
        <%= f.submit "Create an account", class: "btn-submit" %> <br/>
      <% end %>
      <p>Have an account?&nbsp;<%= link_to "Login", 'login' %></a></p>
    </div>
  </div>
</div>