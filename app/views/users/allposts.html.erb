<!-- Showing all posts own by a user -->
<!--<div class="allposts">-->
	<div class"contact">
		<div class="container">
			<h1><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %>'s Information</h1>
			<h4>Contact Info</h4>
			<p><small>Phone number: <%= @user.phone_number %></small></p>
			<p><small>Email: <%= @user.email %></small></p>
		</div>
	</div>

	<hr/>

	<% @posts.each do |p| %>
		<div class="a-post">
			<div class="container">
			<a href="/post/<%= p.id %>"><p><%= p.title %></p></a>
			<p>Category: <%= p.category %>, By: <a href="/posts/user/<%= p.user.id %>"><%= p.user.first_name %> <%= p.user.last_name %></p></a>
			<p>Updated: <%= time_ago_in_words(p.updated_at) %> ago, Created on: <%= time_tag(p.created_at) %></p>
			</div>
		</div>
	<% end %>
<!--</div>-->
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>