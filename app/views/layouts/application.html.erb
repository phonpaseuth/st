          <li><%= link_to "Log out", logout_path, method: "delete" %></li> 
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<% end %>

  <body>
    <%= yield %>
  </body>
